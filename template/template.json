{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TTS Request",
  "type": "object",
  "properties": {
    "api_rate": {
      "type": "integer",
      "minimum": 50,
      "maximum": 500,
      "description": "Speed of voice",
      "default": 150
    },
    "api_volume": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Volume level",
      "default": 0.7
    },
    "api_text": {
      "type": "string",
      "minLength": 1,
      "description": "Text to read aloud"
    },
    "api_voice": {
      "type": "string",
      "description": "Voice ID (e.g. 'english', 'swedish')",
      "default": "english"
    },
    "api_tune": {
      "type": "boolean",
      "description": "Whether to play an audio file instead of TTS",
      "default": false
    },
    "password": {
      "type": "string",
      "minLength": 1,
      "description": "Required password for authentication"
    }
  },
  "required": [
    "api_text",
    "password"
  ],
  "additionalProperties": false
}
